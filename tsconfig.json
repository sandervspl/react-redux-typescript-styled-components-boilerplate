{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "pretty": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "common/*": ["app/components/common/*"],
      "common": ["app/components/common/index"],
      "components/*": ["app/components/*"],
      "config/*": ["config/*"],
      "config": ["config/index"],
      "ducks/*": ["app/ducks/*"],
      "images/*": ["app/static/images/*"],
      "modules/*": ["app/components/modules/*"],
      "modules": ["app/components/modules/index"],
      "server/*": ["server"],
      "services/*": ["app/services/*"],
      "services": ["app/services/index"],
      "styles/*": ["app/styles/*"],
      "styles": ["app/styles/index"],
      "types": ["app/types/index"],
      "vectors/*": ["app/static/vectors/*"],
      "styled-components": ["app/services/styled-components.ts"],
      "app/*": ["app/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es6"]
  }
}
